{
    "name": "jobayer/laravel-application-system-updater",
    "description": "A powerful and automated system for keeping your Laravel applications up-to-date. Easily update your application's files, database schema, and codebase with a single, streamlined process.",
    "type": "library",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "orchestra/testbench": "^7.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Jobayer\\LaravelAppUpdater\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jobayer\\LaravelAppUpdater\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Jobayer\\LaravelAppUpdater\\PakageServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "authors": [
        {
            "name": "MD Abdulla Jobayer",
            "email": "mdabdullajovayer@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true
}